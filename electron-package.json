{
  "name": "da-auto-test-generator",
  "version": "1.0.0",
  "description": "DA Auto Test Generator from Figma - Desktop App",
  "main": "electron-main.js",
  "type": "commonjs",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "build-exe": "electron-builder",
    "build-exe-win": "electron-builder --win",
    "build-exe-mac": "electron-builder --mac",
    "build-exe-linux": "electron-builder --linux",
    "check": "node check-setup.js"
  },
  "dependencies": {
    "electron": "^37.2.4"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.da.autotestgenerator",
    "productName": "DA Auto Test Generator",
    "directories": {
      "output": "dist-exe"
    },
    "files": [
      "electron-main.js",
      "electron-preload.js",
      "figma-exporter.html",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "author": "DA Auto Test Generator",
  "license": "MIT"
}